<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Muhammad Fayakuun Personal Website</title>
    <link
      href="https://fonts.googleapis.com/css?family=Poppins"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <style>
      a.link-dark:hover { color: blue !important; }
    </style>
  </head>
  <body style="font-family: Poppins" class="bg-secondary">
    <nav class="navbar navbar-expand-md" style="background-color: #f2f3f2">
      <div class="container">
        <a class="navbar-brand" href="/"><img
            src="https://dumbways.id/assets/images/brandred.png"
            alt="Logo"
            style="height: 30px"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-sm-0">
            {{#if user}}
              <li class="nav-item">
                <a class="nav-link" href="/add-collection">Add Colletion</a>
              </li>
            {{/if}}
          </ul>
          {{#if user}}
            <span class="navbar-text">Hi, {{user.username}}</span>
            <a class="btn btn-dark mx-2" href="/logout">
              Logout</a>
          {{else}}
            <a class="btn btn-dark" href="/register">Register</a>
            <a class="btn btn-dark mx-2" href="/login">Login</a>
          {{/if}}
        </div>
      </div>
    </nav>
    <main>

      <div>
        <br />
        <h1 class="text-center my-5 fw-bold">All Collections</h1>
        <div class="container">
          <div
            class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"
            id="my-project"
          >
            {{#each data}}
              <div class="col">
                <div class="card">
                  <div class="card-body">
                    <a
                      class="card-title text-decoration-none link-dark"
                      href="/collection-detail/{{id}}"
                    >{{collectionName}}</a>
                    <p class="card-text text-body-secondary">
                    </p>
                    <p class="card-text">
                      Owner :
                      {{username}}
                    </p>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
        <br />
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>